<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/twelve"
    android:orientation="vertical"
    tools:context=".Page12">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="140dp"
        android:text="The Prince, who had thought the moment he saw her that the poor girl was very much like the beautiful Princess, was delighted. He insisted on Cinderella telling him her story, which she did very modestly, and all listened with wonder."
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:text="As her tale ended, the Fairy godmother suddenly entered the room, and placing her godchild’s hand in the Prince’s, said:"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:text="“Take this young girl for your wife, Prince; she is good and patient, and as she has known how to submit to injustice meekly, she will know how to reign justly.”"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:text="So Cinderella was married to the Prince in great state, and they lived together very happily. She forgave her sisters, and treated them always very kindly, and the Prince had great cause to be glad that he had found the glass slipper."
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Page"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:onClick="goToPage13"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Page"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:onClick="goToPage11"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"/>

</LinearLayout>
