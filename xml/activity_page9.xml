<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nine"
    android:orientation="vertical"
    tools:context=".Page9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="540dp"
        android:text="The Prince would scarcely let her out of his sight, and Cinderella, who was getting a little spoiled by all the flattery she heard, began to think more of herself and less of the Fairy; so the time stole on, till glancing up at the clock, she saw it wanted only five minutes to eleven."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Page"
        android:textSize="15dp"
        android:onClick="goToPage10"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Page"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:onClick="goToPage8"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

</LinearLayout>
